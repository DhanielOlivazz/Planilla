<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlanillaAppMovil.Views.VerEmpleadoPage"
             Title="Ver Empleado">
    <VerticalStackLayout Padding="10" Spacing="10">
        <Image Source="{Binding Detalle.UrlFoto}"
               Aspect="AspectFill"
               HeightRequest="200"/>
        <Label Text="{Binding Detalle.nombreCompleto}" />
        <Label Text="{Binding Detalle.FechaInicio}" />
        <Label Text="{Binding Detalle.salario}" />
        <Label Text="{Binding Detalle.cargo.nombre}" />
    </VerticalStackLayout>
</ContentPage>